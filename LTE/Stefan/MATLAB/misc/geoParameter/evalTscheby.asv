function f = evalTscheby(c, a, b, x)

d = 0;
dd = 0;

rangeCheck = (x - a) .* (x - b),
if ( > 0)
  error('x not in range in routine evalTscheby');
end

% change of variable
y = (2 * x - a - b) / (b - a);
y2 = 2 * y;

% Clenshaw's recurrence
for j =  length(c):-1:2
  sv = d;
  d = y2 * d - dd + c(j);
  dd = sv;
end
  
f = y * d - dd + 0.5 * c(1);
